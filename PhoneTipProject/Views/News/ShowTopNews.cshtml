@using PhoneTipProject.Utilities.ExtensionMethods;
@model IEnumerable<PhoneTipProject.Models.DataLayer.Pages>

<section class="last-news-side border-radius">
    <header><i class="icons icon-star"></i> <h3> پربازدیدترین خبرها </h3></header>
    <ul>

        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="@item.ImageUrl">
                <h2> <a href="">@item.Titel</a></h2>
                <span>انتشار : @item.CreateDate.ToShamsi()</span>
            </li>
        }

    </ul>
</section>
