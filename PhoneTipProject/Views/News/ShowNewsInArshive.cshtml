@using PhoneTipProject.Utilities.ExtensionMethods;
@model IEnumerable<PhoneTipProject.Models.DataLayer.Pages>
@{
    ViewBag.Title = "ShowNewsInArshive";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">خانه </a></li>
    <li class="breadcrumb-item"><a href="#">اخبار </a></li>
    <li class="breadcrumb-item active" style="color:white"> @ViewBag.Titel </li>
</ul>

<!-- last news -->
<section class="last-news-section border-radius">
    <header><i class="icons icon-doc-2"></i>  <h3> آرشیو اخبار @ViewBag.Titel</h3> </header>
    <ul>

        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="@item.ImageUrl">
                <h2> <a href=""> @item.Titel </a></h2>
                <p>
                    @item.ShortDescription
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi() </span>
                @*<a href="" class="more-link"><i class="icons icon-more"></i></a>*@
            </li>

        }

    </ul>
</section>
